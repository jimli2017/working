		<script src="js/mui.min.js"></script>
		<script type="text/javascript" src="js/jquery-2.1.1.min.js"></script>
		<script type="text/javascript">
			mui.init();
			$(document).ready(function(){
				var html="";
				var cook=JSON.parse(localStorage.getItem("cooktest"));
				if (cook.proType==1) {
					$("#proType").html("大类");
				} else{
					$("#proType").html("小类");
				}
				if (cook.proNo=="null") {
					$("#cpproNo").html("");
				} else{
					$("#cpproNo").html(cook.proNo);
				}
						$("#cpName").html(cook.proName);
						//$("#cpproNo").html(cook.proNo);
						//$("#proType").html(cook.proType);
						$("#cpPrice").html(cook.price+"元");
						//$("#isSaled").html(cook.isSaled);
						$("#startTime").html(cook.startTime);
						$("#cpName").html(cook.proName);//饮品的做法
						for (var i in cook.makes) {
							html+="<span class='z-folt-right u-makes-caipin'>"+cook.makes[i].practiceName
	              			html+="</span>"
						}
						$(".add-mskes-after").after(html);
						if (cook.isSaled==0) {
							$("#isSaled").html("在售");
						} else{
							$("#isSaled").html("下架");
						}
			})
		</script>
